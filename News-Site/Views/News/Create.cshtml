@model News_Site.ViewModels.NewsViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="News" method="post" enctype="multipart/form-data">
            <p>
                <label>News Name</label>
                <input name="NewsName" class="form-control" />
            </p>
            <p>
                <label>News Header</label>
                <input name="NewsHeader" class="form-control" />
            </p>
            <p>
                <label>News Subtitle</label>
                <input name="NewsSubtitle" class="form-control" />
            </p>
            <p>
                <label>News Text</label>
                <input name="NewsText" class="form-control" />
            </p>
            <p>
                <label>News Image</label>
                <input name="uploadedFile" type="file" class="form-control"/>
            </p>
            <p>
                <input type="submit" value="Add" />
            </p>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
